<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.screens.courseInfoScreen.CourseInfoFragment">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goBackBtn"
        style="@style/CustomFABStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16.dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_arrow_left"
        android:tint="@color/black"
        app:backgroundTint="@android:color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/isFavBtn"
        style="@style/CustomFABStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="16.dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_favorite"
        android:tint="@color/black"
        app:backgroundTint="@color/black"
        app:fabSize="auto"
        app:rippleColor="@color/light_grey"
        app:showMotionSpec="@anim/slide_out_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/courseImg"
            android:layout_width="match_parent"
            android:layout_height="240.dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/courseNameTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:padding="16.dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40.dp"
            android:orientation="horizontal"
            android:paddingLeft="16.dp"
            android:paddingRight="16.dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40.dp"
                android:layout_height="40.dp"
                android:layout_gravity="left"
                tools:src="@tools:sample/avatars" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="8.dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:text="@string/author_title"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/courseAuthorTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:fontFamily="@font/roboto_medium"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/startCourseBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.dp"
            android:layout_marginTop="21.dp"
            android:layout_marginRight="16.dp"
            android:layout_marginBottom="8.dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/start_course_title" />

        <Button
            android:id="@+id/toPlatformBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.dp"
            android:layout_marginRight="16.dp"
            android:layout_marginBottom="21.dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/to_platform_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:paddingLeft="16.dp"
            android:paddingRight="16.dp"
            android:paddingBottom="16.dp"
            android:text="@string/about_course_title"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/courseDescriptionTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:paddingLeft="16.dp"
            android:paddingRight="16.dp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>


</FrameLayout>